{
  "crons": [
    {
      "path": "/api/cron/daily-streak",
      "schedule": "0 0 * * *"
    }
  ],
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    }
  ]
}